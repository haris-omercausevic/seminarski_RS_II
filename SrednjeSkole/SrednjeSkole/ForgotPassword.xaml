<?xml version="1.0" encoding="utf-8" ?>
<ContentPage Title="Reset lozinke"  xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SrednjeSkole.ForgotPassword">
    <StackLayout VerticalOptions="CenterAndExpand" Margin="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label Text="Korisničko ime:" FontSize="18" Grid.Row="1" VerticalTextAlignment="Center"/>
            <Entry x:Name="korisnickoImeInput" Grid.Row="1" Grid.Column="1"/>

            <Button x:Name="resetBtn" Text="Resetuj" Grid.Row="2" Grid.Column="1" Clicked="resetBtn_Clicked"/>




        </Grid>
    </StackLayout>
</ContentPage>